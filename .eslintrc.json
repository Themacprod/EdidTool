{
    "extends": [
        "eslint:all",
        "airbnb"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "comma-dangle": ["error", {
            "arrays": "always",
            "objects": "never",
            "imports": "always",
            "exports": "always",
            "functions": "ignore"
        }],
        "func-names": ["error", "never"],
        "global-require": "off",
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "max-len": "off",
        "max-lines": "off",
        "no-console": "off",
        "no-bitwise": "off",
        "no-underscore-dangle": "off",
        "no-var": "off",
        "object-curly-newline": ["error", { "minProperties": 1 }],
        "object-shorthand": "off",
        "one-var": "off",
        "prefer-arrow-callback": "off"
    }
}
